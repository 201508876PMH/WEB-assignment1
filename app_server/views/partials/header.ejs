                </ul>
                <% if (locals.currentUser) {%>
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Hello, <%= currentUser.firstName %></a>
                    </li>
                </ul>
                <% } %>
            </nav>
