</head>

<body>
    <header class="header">
        <div class="container">
            <nav class="navbar">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/createAccount">Create account</a>
                    </li>
                    <% if (locals.currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
